#include <iostream>
using namespace std;

// Função para trocar valores
void trocar(int* a, int* b) {
    int temp = *a;
    *a = *b;
    *b = temp;
}

int main() {
    int x, y;
    cout << "Digite dois numeros: ";
    cin >> x >> y;

    trocar(&x, &y);

    cout << "Depois da troca:\n";
    cout << "x = " << x << ", y = " << y << endl;

    return 0;
}
