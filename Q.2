#include <iostream>
using namespace std;

int main() {
    const double PI = 3.14159;
    double raio, area;

    // Entrada do raio
    cout << "Digite o raio do circulo: ";
    cin >> raio;

    // Cálculo da área
    area = PI * raio * raio;

    // Exibição
    cout << "Area do circulo: " << area << endl;

    return 0;
}
